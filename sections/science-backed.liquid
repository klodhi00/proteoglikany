{% comment %}
  Sekcja: Wspierany przez naukę
  
  Wyświetla tag, tytuł oraz treść opisową w wyśrodkowanym kontenerze.
  Max-width treści: 1000px
  Max-width sekcji: 1600px
{% endcomment %}

<section class="science-backed">
  <div class="science-backed__outer-wrapper">
    <div class="science-backed__inner-wrapper">
      <div class="science-backed__content">
        {% if section.settings.tag != blank %}
          <span class="science-backed__tag">{{ section.settings.tag }}</span>
        {% endif %}
        
        {% if section.settings.title != blank %}
          <h2 class="science-backed__title">{{ section.settings.title }}</h2>
        {% endif %}
        
        {% if section.settings.text != blank %}
          <div class="science-backed__text">
            {{ section.settings.text }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Wspierany przez naukę",
  "settings": [
    {
      "type": "text",
      "id": "tag",
      "label": "Tag",
      "default": "NAUKA"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Tytuł",
      "default": "Wspierany przez naukę"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Treść",
      "default": "<p>Kuracja Nouritrin® + Marilex® bazuje na koncepcji uzupełniania proteoglikanów (Proteoglycan Replacement Therapy™).</p>"
    }
  ],
  "presets": [
    {
      "name": "Wspierany przez naukę"
    }
  ]
}
{% endschema %}