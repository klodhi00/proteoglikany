{% comment %}
  Sekcja: Skład produktu
  Wyświetla tabelę ze składem produktu wraz z nagłówkiem i opisem
  Zgodność: Shopify Online Store 2.0, WCAG 2.1 AA
{% endcomment %}

<section class="product-composition">
  <div class="product-composition__outer-wrapper">
    <div class="product-composition__inner-wrapper">
      
      {% if section.settings.tag != blank %}
        <div class="product-composition__tag">
          {{ section.settings.tag }}
        </div>
      {% endif %}

      {% if section.settings.title != blank %}
        <h2 class="product-composition__title">
          {{ section.settings.title }}
        </h2>
      {% endif %}

      {% if section.blocks.size > 0 %}
        <div class="product-composition__table-wrapper">
          <table class="product-composition__table">
            <thead>
              <tr>
                <th scope="col" class="product-composition__table-header">
                  {{ section.settings.header_ingredient }}
                </th>
                <th scope="col" class="product-composition__table-header">
                  {{ section.settings.header_content }}
                </th>
              </tr>
            </thead>
            <tbody>
              {% for block in section.blocks %}
                <tr class="product-composition__table-row" {{ block.shopify_attributes }}>
                  <td class="product-composition__table-cell product-composition__table-cell--ingredient">
                    {{ block.settings.ingredient }}
                  </td>
                  <td class="product-composition__table-cell product-composition__table-cell--content">
                    {{ block.settings.content }}
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      {% endif %}

      {% if section.settings.description != blank %}
        <div class="product-composition__description">
          {{ section.settings.description }}
        </div>
      {% endif %}

    </div>
  </div>
</section>

