{% comment %}
  Password page section for Proteoglikany theme
  This section creates an accessible, mobile-first password protection page
  Used when password protection is applied to a store
  
  https://shopify.dev/docs/storefronts/themes/architecture/templates/password
{% endcomment %}

<section class="password-page">
  <div class="container">
    <div class="password-page__content">
      {% if shop.logo != blank %}
        <div class="password-page__logo">
          <img src="{{ shop.logo | img_url: 'medium' }}" alt="{{ shop.name | escape }}" width="250" height="auto">
        </div>
      {% else %}
        <h1 class="password-page__heading">{{ shop.name }}</h1>
      {% endif %}
      
      <h2 class="password-page__title">{{ 'password.title' | t }}</h2>

      {% if shop.password_message %}
        <div class="password-page__message">
          <p>{{ shop.password_message }}</p>
        </div>
      {% endif %}

      {% form 'storefront_password', class: 'password-page__form' %}
        {% if form.errors %}
          <div class="password-page__errors" role="alert" aria-live="polite">
            {{ form.errors | default_errors }}
          </div>
        {% endif %}

        <div class="password-page__form-field">
          <label for="password-input" class="password-page__label">
            {{ 'password.password' | t }}
          </label>
          <input 
            type="password" 
            name="password" 
            id="password-input" 
            class="password-page__input"
            aria-required="true"
            autocomplete="current-password">
        </div>

        <div class="password-page__submit">
          <button type="submit" class="password-page__button">
            {{ 'password.enter' | t }}
          </button>
        </div>
      {% endform %}
      
      <div class="password-page__footer">
<p class="password-page__powered-by">
  Sklep dzia≈Ça na platformie <a href="https://www.shopify.com" target="_blank" rel="nofollow">Shopify</a>
</p>
      </div>
    </div>
  </div>
</section>

<style>
  .password-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
    background-color: #FAFAFA;
  }

  .password-page__content {
    width: 100%;
    max-width: 480px;
    margin: 0 auto;
    padding: 40px 20px;
    background-color: #FFFFFF;
    border-radius: 0;
    text-align: center;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
  }

  .password-page__logo {
    margin-bottom: 24px;
  }

  .password-page__logo img {
    max-width: 100%;
    height: auto;
    margin: 0 auto;
  }

  .password-page__heading {
    font-family: 'Poppins', sans-serif;
    font-size: clamp(24px, 3vw, 32px);
    font-weight: 400;
    color: #252525;
    margin-bottom: 24px;
  }

  .password-page__title {
    font-family: 'Poppins', sans-serif;
    font-size: clamp(24px, 3vw, 24px);
    font-weight: 400;
    color: #16B4EF;
    margin-bottom: 16px;
  }

  .password-page__message {
    margin-bottom: 32px;
  }

  .password-page__message p {
    font-family: 'Poppins', sans-serif;
    font-size: 16px;
    line-height: 1.5;
    color: #505050;
  }

  .password-page__form {
    margin-bottom: 32px;
  }

  .password-page__errors {
    margin-bottom: 16px;
    padding: 12px 16px;
    color: #d82c0d;
    font-size: 14px;
    text-align: left;
    background-color: #ffe5e5;
    border-radius: 4px;
    border-left: 4px solid #d82c0d;
  }

  .password-page__form-field {
    margin-bottom: 20px;
    text-align: left;
  }

  .password-page__label {
    display: block;
    font-family: 'Poppins', sans-serif;
    font-size: 14px;
    color: #505050;
    margin-bottom: 8px;
    font-weight: 400;
  }

  .password-page__input {
    width: 100%;
    height: 48px;
    padding: 0 16px;
    font-family: 'Poppins', sans-serif;
    font-size: 16px;
    color: #252525;
    border: 1px solid #EAEAEA;
    border-radius: 0;
    transition: border-color 0.3s ease;
  }

  .password-page__input:focus {
    border-color: #16B4EF;
    outline: none;
  }

  .password-page__input:focus-visible {
    outline: 2px solid rgba(22, 180, 239, 0.5);
    outline-offset: 2px;
  }

  .password-page__submit {
    margin-bottom: 16px;
  }

  .password-page__button {
    width: 100%;
    height: 48px;
    padding: 12px 32px;
    font-family: 'Poppins', sans-serif;
    font-size: 16px;
    font-weight: 400;
    color: #FFFFFF;
    background-color: #16B4EF;
    border: 1px solid transparent;
    border-radius: 100px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .password-page__button:hover,
  .password-page__button:focus {
    background-color: transparent;
    border: 1px solid #16B4EF;
    color: #16B4EF;
  }

  .password-page__button:focus-visible {
    outline: 2px solid rgba(22, 180, 239, 0.5);
    outline-offset: 2px;
  }

  .password-page__footer {
    margin-top: 32px;
    font-size: 12px;
    color: #A4A4A4;
  }

  .password-page__powered-by {
    font-size: 12px;
  }

  .password-page__powered-by a {
    color: #16B4EF;
    text-decoration: underline;
    transition: color 0.3s ease;
  }

  .password-page__powered-by a:hover {
    color: #1299d1;
  }

  /* Responsive styles using Proteoglikany breakpoints */
  @media (min-width: 768px) {
    .password-page {
      padding: 40px;
    }
    
    .password-page__content {
      padding: 60px 40px;
    }
  }

  @media (min-width: 1024px) {
    .password-page__content {
      padding: 80px 60px;
    }
  }
</style>

