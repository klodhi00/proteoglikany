  "name": "t:general.password",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.password.settings.header.content"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "t:sections.password.settings.background_color.label",
      "default": "#FAFAFA"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "t:sections.password.settings.text_color.label",
      "default": "#505050"
    }
  ],
  "presets": [
    {
      "name": "Password Page"
    }
  ]
}
{% endschema %}