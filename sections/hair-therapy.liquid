{% comment %}
  Sekcja: Wspierany przez naukę
  
  Wyświetla tag, tytuł oraz treść opisową.
  Desktop: tag + tytuł po lewej, tekst po prawej (64px gap)
  Mobile: układ kolumnowy
{% endcomment %}

<section class="hair-therapy">
  <div class="hair-therapy__outer-wrapper">
    <div class="hair-therapy__inner-wrapper">
      <div class="hair-therapy__content">
        <div class="hair-therapy__header">
          {% if section.settings.tag != blank %}
            <span class="hair-therapy__tag">{{ section.settings.tag }}</span>
          {% endif %}
          
          {% if section.settings.title != blank %}
            <h2 class="hair-therapy__title">{{ section.settings.title }}</h2>
          {% endif %}
        </div>
        
        {% if section.settings.text != blank %}
          <div class="hair-therapy__text">
            {{ section.settings.text }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Terapia włosów",
  "settings": [
    {
      "type": "text",
      "id": "tag",
      "label": "Tag",
      "default": "WYPADANIE WŁOsów"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Tytuł",
      "default": "Terapia na wypadanie włosów"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Treść",
      "default": "<p>Nourkrin® to innowacyjna kuracja wspierająca naturalny cykl wzrostu włosa, oparta o przebadane, bezpieczne składniki.</p>"
    }
  ],
  "presets": [
    {
      "name": "Terapia włosów"
    }
  ]
}
{% endschema %}